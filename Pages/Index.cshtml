@page
@model EnergyTariffAdvisor.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5">Welcome to the Energy Tariff Advisor</h1>
        <p class="lead">Compare UK electricity tariffs based on your real consumption profile.</p>
    </div>

    <div class="row g-5 align-items-stretch">
        <!-- Ofgem Card -->
        <div class="col-md-4 d-flex">
            <div class="card h-100 shadow-sm border-secondary scale-up">
                <div class="card-header bg-light text-dark text-center border-bottom border-secondary fw-semibold">
                    What is Ofgem?
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        Ofgem is the UK’s independent energy regulator, ensuring a fair and affordable energy market.
                        It sets the official price cap and monitors supplier practices.
                    </p>
                    <div class="mt-auto">
                        <a href="https://www.ofgem.gov.uk/" target="_blank" class="btn btn-outline-secondary w-100">Visit Ofgem</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Consumption Profile Card (highlighted with badge) -->
        <div class="col-md-4 d-flex">
            <div class="card h-100 shadow-sm border-success position-relative scale-up">
                

                <!-- Header -->
                <div class="card-header bg-success bg-opacity-25 text-dark text-center border-bottom border-success fw-semibold">
                    Your Consumption Profile
                </div>

                <!-- Body -->
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        According to Ofgem, a typical day is split into 48 half-hour periods.
                        This tool uses this model to provide precise comparisons.
                    </p>
                    <div class="mt-auto">
                        <a href="/ProfileEditor" class="btn btn-outline-success w-100">
                            Define Your Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>

         <!-- Suppliers Card -->
         <div class="col-md-4 d-flex">
            <div class="card h-100 shadow-sm border-info scale-up">
                <div class="card-header bg-light bg-opacity-25 text-dark text-center border-bottom border-info fw-semibold">
                    Energy Suppliers
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">
                        This tool currently integrates with live Octopus Energy APIs.
                    </p>
                    <div class="mt-auto">
                        <a href="/OctopusTest" class="btn btn-outline-info w-100">Explore Octopus Products</a>
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>

<style>
    .scale-up {
        transform: scale(1.05);
        transition: transform 0.3s ease;
    }

        .scale-up:hover {
            transform: scale(1.07);
        }
</style>